{
    "name": "ninjaportal/filament-translations",
    "description": "Filament Plugin for NinjaPortal Translations module",
    "keywords": [
        "lordjoo",
        "laravel",
        "laravel-apigee",
        "apigee","apigee-php"
    ],
    "homepage": "https://github.com/ninjaportal/ninjaportal",
    "license": "MIT",
    "authors": [
        {
            "name": "lordjoo",
            "email": "youssef.afify122@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "illuminate/contracts": "^12.0",
        "nesbot/carbon": "^3.0",
        "spatie/laravel-package-tools": "^1.16.3"
    },
    "autoload": {
        "psr-4": {
            "NinjaPortal\\FilamentTranslations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NinjaPortal\\FilamentTranslations\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NinjaPortal\\FilamentTranslations\\FilamentTranslationsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "filament/upgrade": "^4.0"
    }
}
